<Window x:Class="PDFRename.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:PDFRename.Models"
        xmlns:local="clr-namespace:PDFRename"
        Title="PDF Rename" Height="700" Width="1000"
        MinHeight="500" MinWidth="800"
        Icon="AppIcon.ico"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Padding="0"
        Margin="0">

    <Window.Resources>
        <local:ProcessingModeConverter x:Key="ProcessingModeConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Status to Color Converter -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FileStatus.Pending}">
                    <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FileStatus.Processing}">
                    <Setter Property="Foreground" Value="{StaticResource InfoBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FileStatus.ReadingMetadata}">
                    <Setter Property="Foreground" Value="{StaticResource InfoBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FileStatus.Ready}">
                    <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FileStatus.Success}">
                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FileStatus.Error}">
                    <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FileStatus.Skipped}">
                    <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="PDF Rename"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding ProcessedFiles, StringFormat='{}{0}'}"
                               Foreground="White"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="/"
                               Foreground="White"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalFiles, StringFormat='{}{0}'}"
                               Foreground="White"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Controls -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Modus:"
                           FontWeight="Bold"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <ComboBox x:Name="ModeComboBox"
                          Grid.Column="1"
                          ItemsSource="{Binding AvailableModes}"
                          SelectedItem="{Binding SelectedMode}"
                          Style="{StaticResource BootstrapComboBoxStyle}"
                          SelectionChanged="ModeComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource ProcessingModeConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Column="3"
                        Content="Ausgewählte verarbeiten"
                        Command="{Binding ProcessSelectedFilesCommand}"
                        Style="{StaticResource SuccessButtonStyle}"
                        Margin="20,0,10,0"
                        Visibility="{Binding ShowProcessButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Grid.Column="4"
                        Content="Liste leeren"
                        Command="{Binding ClearListCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"/>
                
                <Button Grid.Column="5"
                        Content="⚙️ Optionen"
                        Command="{Binding ShowOptionsCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,0,0"/>
            </Grid>

            <!-- File List -->
            <GroupBox Grid.Row="1" 
                      Header="PDF-Dateien (Dateien hier hineinziehen)"
                      Style="{StaticResource BootstrapGroupBoxStyle}">
                <ListView x:Name="PdfListView"
                          ItemsSource="{Binding PdfFiles}"
                          Style="{StaticResource BootstrapListViewStyle}"
                          AllowDrop="True"
                          Drop="PdfListView_Drop"
                          DragOver="PdfListView_DragOver"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource BootstrapListViewItemStyle}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="MinHeight" Value="60"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Selection Checkbox -->
                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding IsSelected}"
                                          Style="{StaticResource BootstrapCheckBoxStyle}"
                                          Margin="0,0,15,0"
                                          VerticalAlignment="Top"
                                          Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <!-- File Names (Original and New) -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <!-- Original File Name -->
                                    <TextBlock Text="{Binding OriginalFileName}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               ToolTip="{Binding OriginalFileName}"
                                               Margin="0,0,0,4"/>
                                    
                                    <!-- Arrow and New File Name -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="→" 
                                                   Foreground="{StaticResource SecondaryBrush}"
                                                   FontWeight="Bold"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Top"/>
                                        <TextBlock Text="{Binding NewFileName}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource DarkBrush}"
                                                   TextWrapping="Wrap"
                                                   ToolTip="{Binding NewFileName}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Status -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Status}"
                                           Style="{StaticResource StatusTextStyle}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Margin="10,0"/>

                                <!-- Status Message -->
                                <TextBlock Grid.Column="3"
                                           Text="{Binding StatusMessage}"
                                           VerticalAlignment="Center"
                                           FontStyle="Italic"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           ToolTip="{Binding StatusMessage}"
                                           Margin="10,0"/>

                                <!-- Edit Button -->
                                <Button Grid.Column="4"
                                        Content="✏️"
                                        Command="{Binding DataContext.EditFileNameCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Width="50" Height="40"
                                        FontSize="20"
                                        Margin="5,0"
                                        ToolTip="Namen bearbeiten"
                                        Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <!-- Remove Button -->
                                <Button Grid.Column="5"
                                        Content="🗑️"
                                        Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource DangerButtonStyle}"
                                        Width="50" Height="40"
                                        FontSize="20"
                                        Margin="5,0"
                                        ToolTip="Entfernen"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>
        </Grid>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="2"
                     Height="4"
                     Maximum="{Binding TotalFiles}"
                     Value="{Binding ProcessedFiles}"
                     Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Background="{StaticResource LightBrush}"
                     Foreground="{StaticResource PrimaryBrush}"/>

        <!-- Status Footer -->
        <Border Grid.Row="3" 
                Background="{StaticResource LightBrush}" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <TextBlock Text="{Binding StatusText}"
                       FontSize="14"
                       Foreground="{StaticResource DarkBrush}"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
