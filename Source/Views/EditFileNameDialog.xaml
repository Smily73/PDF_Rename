<Window x:Class="PDFRename.Views.EditFileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dateiname bearbeiten"
        Width="500" 
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/BootstrapStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <!-- Main Container with Shadow Effect -->
    <Border Background="White"
            CornerRadius="8"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              Direction="270" 
                              ShadowDepth="4" 
                              Opacity="0.3" 
                              BlurRadius="15"/>
        </Border.Effect>
        
        <Grid Margin="25,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="Dateiname bearbeiten"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#333"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1"
                        Content="✕"
                        Click="CloseButton_Click"
                        Width="30" Height="30"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#666"
                        Cursor="Hand"
                        ToolTip="Schließen">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f0f0f0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <TextBlock Grid.Row="1" 
                       Text="Neuer Dateiname:"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Foreground="#555"
                       Margin="0,0,0,8"/>

                <TextBox x:Name="FileNameTextBox"
                     Grid.Row="2"
                     Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}"
                     Padding="12"
                     FontSize="16"
                     Height="50"
                     BorderThickness="2"
                     BorderBrush="#dee2e6"
                     Background="White"
                     VerticalContentAlignment="Center"
                     KeyDown="FileNameTextBox_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#007bff"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button x:Name="CancelButton"
                        Content="Abbrechen"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        MinWidth="100"
                        Margin="0,0,10,0"
                        IsCancel="True"/>
                
                <Button x:Name="OkButton"
                        Content="OK"
                        Command="{Binding AcceptCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        MinWidth="100"
                        IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
